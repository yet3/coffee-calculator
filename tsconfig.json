{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@typings/*": [
        "./src/typings/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
